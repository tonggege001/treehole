.header{width: 750rpx; height: 90rpx; background: rgba(210,25,68,0.9); display: flex; justify-content: space-between; align-items: center; box-sizing: border-box;}
.header .logo {color: #fff; padding: 10rpx 30rpx; letter-spacing: 2rpx;}
.header .newpostbtncon{width: 75rpx; height: 100%; display: flex; align-items: center; padding-right: 10rpx;}
.header .newpostbtncon .newpostimg {width: 100%; }


